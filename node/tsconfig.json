{
    "compilerOptions": {
        "target": "es2016",
        "module": "CommonJS",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
